<!-- Validation failure messages -->
<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>
<form action="/create_project" method="post">
<div class="row">
  <div class="col-md-9 light-body">
    <div class="row">
      <div class="col-md-2 progresss mobile-only">
        <img src="/images/progress-2.png" width="100"/>
      </div>
    <div class="col-md-10">
    <h1 class="page-title">Project Details</h1>
  </div>
</div>

      <!-- Hidden input for authenticity token to protect from forgery -->

      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Project Name
        </label>

        <input type="text" id="title" name="title" placeholder="What do you want to call the project?" class="form-control" value="<%= @project.title %>">
      </div>

      <!-- Label and input for type -->
      <div class="form-group">

        <input type="hidden" id="project_type" name="project_type" placeholder="Project Type" class="form-control" value="<%= @type %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <br><label for="description" class="control-label">
          Describe Your Project
        </label>

        <textarea rows="6" id="description" name="description" placeholder="The more info you include here the more accurate our design will be." class="form-control" value="<%= @project.description %>"></textarea>
      </div>

      <!-- Label and input for status -->
      <div class="form-group">

        <input type="hidden" id="status" name="status" placeholder="Status" class="form-control" value="Not Started">
      </div>

      <!-- Label and input for version -->
      <div class="form-group">

        <input type="hidden" id="version" name="version" placeholder="Version" class="form-control" value="1.0">
      </div>

      <!-- Label and input for hours -->
      <div class="form-group">

        <input type="hidden" id="hours" name="hours" placeholder="Hours Used" class="form-control" value="1">
      </div>

      <!-- Label and input for client -->
      <div class="form-group">

        <input type="hidden" id="client_id" name="client_id" class="form-control" value="<%= current_client.id %>">
      </div>

      <!-- Label and input for designer -->
      <div class="form-group">

        <input type="hidden" id="designer_id" name="designer_id" class="form-control" value="1">
      </div>




      <p style="text-align:left; margin-top: 30px;"><button type="submit" class="blue-btn-lg">Next</button></p>



<img src="/images/bring-it.png" style="width: 100%;max-width:500px; margin-top: 10px; margin-bottom:-20px;"/>
  </div>
  <div class="col-md-3 side-menu scrollify no-padding text-left">
    <div class="side-progress"><a class="sidelink active" href="/projects/start"><i class="fa fa-check-circle" aria-hidden="true"></i> Project Type</a></div>
    <div class="side-progress"><span class="sidelink active"><i class="fa fa-circle" aria-hidden="true"></i> Project Details</span></div>
    <div class="side-progress"><span class="sidelink inactive disabled"><i class="fa fa-circle-thin" aria-hidden="true"></i> Upload Files</span></div>
    <div class="side-progress"><span class="sidelink inactive disabled"><i class="fa fa-circle-thin" aria-hidden="true"></i> Review Project</span></div>
    </div>

</div>
</form>
